<edit-config>
    <target>
      <{{target}}/>
    </target>
     <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
         <network-instance>
          <name>{{name}}</name>
          <config>
            <name>{{name}}</name>
            <type xmlns:oc-ni-types="http://openconfig.net/yang/network-instance-types">{{type}}</type>
            <enabled>{{enable}}</enabled>
            <description>{{description}}</description>
          </config>    
          <mpls>
            <signaling-protocols>
              <ldp>
                <interface-attributes>
                  <interfaces>
                    <interface>
                      <interface-id>{{id}}</interface-id>
                      <config>
                        <interface-id>{{id}}</interface-id>
                      </config>
                      <interface-ref>
                        <config>
                          <interface>{{interface}}</interface>
                          <subinterface>{{subinterface}}</subinterface>
                        </config>
                      </interface-ref>
                    </interface>
                  </interfaces>
                </interface-attributes>
              </ldp>
            </signaling-protocols>
          </mpls>
        </network-instance>
      </network-instances>
    </config>
</edit-config>
