  <edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{name}}</name>
          <config>
            <name>{{name}}</name>
          </config>
          <protocols>
            <protocol>
              <identifier>{{identifier}}</identifier>
              <name>{{protocol_name}}</name>
              <config>
                <identifier xmlns:oc-pol-types="http://openconfig.net/yang/policy-types">{{identifier}}</identifier>
                <name>{{protocol_name}}</name>
              </config>
              <bgp>
                <global>
                  <config>
                    <as>65000</as>
                  </config>
                </global>
                <neighbors>
                  <neighbor>
                    <neighbor-address>{{neighbor_address}}</neighbor-address>
                    <config>
                      <neighbor-address>{{neighbor_address}}</neighbor-address>
                      <peer-group>test</peer-group>
                    </config>
                    <apply-policy>
                      <config>
                        <import-policy>{{import_export_bgp_policy}}</import-policy>
                      </config>
                    </apply-policy>
                  </neighbor>
                </neighbors>
                <peer-groups>
                  <peer-group>
                    <peer-group-name>test</peer-group-name>
                    <config>
                      <peer-group-name>test</peer-group-name>
                    </config>
                  </peer-group>
                </peer-groups>
              </bgp>
            </protocol>
          </protocols>
        </network-instance>
      </network-instances>
    </config>
  </edit-config>
