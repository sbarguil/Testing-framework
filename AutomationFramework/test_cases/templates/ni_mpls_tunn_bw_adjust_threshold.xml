  <edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{name}}</name>
          <config>
            <name>{{name}}</name>
            <type xmlns:oc-ni-types="http://openconfig.net/yang/network-instance-types">{{type}}</type>
            <enabled>{{enable}}</enabled>
            <description>{{description}}</description>
          </config>
          <mpls>
            <lsps>
              <constrained-path>
                <tunnels>
                   <name>{{tunnel_name}}</name>
                    <config>
                      <name>{{tunnel_name}}</name>
                    </config>
                    <bandwidth>
                      <auto-bandwidth>
                        <config>
                          <adjust-threshold>{{threshold_percent}}</adjust-threshold>
                        </config>
                      </auto-bandwidth>
                    </bandwidth>
                  </tunnel>
                </tunnels>
              </constrained-path>
            </lsps>
          </mpls>
        </network-instance>
      </network-instances>
    </config>
  </edit-config>
