  <edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
      <routing-policy xmlns="http://openconfig.net/yang/routing-policy">
        <policy-definitions>
          <policy-definition>
            <name>{{import_export_bgp_policy}}</name>
            <config>
              <name>{{import_export_bgp_policy}}</name>
            </config>
          </policy-definition>
        </policy-definitions>
      </routing-policy>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{instance_name}}</name>
          <config>
            <name>{{instance_name}}</name>
          </config>
          <protocols>
            <protocol>
              <identifier>{{identifier}}</identifier>
              <name>{{name}}</name>
              <config>
                <identifier xmlns:oc-pol-types="http://openconfig.net/yang/policy-types">{{identifier}</identifier>
                <name>{{name}}</name>
              </config>
              <bgp>
                <neighbors>
                  <neighbor>
                    <neighbor-address>{{neighbor_address}}</neighbor-address>
                    <config>
                      <neighbor-address>{{neighbor_address}}</neighbor-address>
                    </config>
                    <apply-policy>
                      <config>
                        <import-policy>{{import_export_bgp_policy}}</import-policy>
                      </config>
                    </apply-policy>
                  </neighbor>
                </neighbors>
              </bgp>
            </protocol>
          </protocols>
        </network-instance>
      </network-instances>
    </config>
  </edit-config>
