  <edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{name}}</name>
          <config>
            <name>{{name}}</name>
            <type xmlns:oc-ni-types="http://openconfig.net/yang/network-instance-types">oc-ni-types:L3VRF</type>
            <enabled-address-families xmlns:oc-types="http://openconfig.net/yang/openconfig-types">oc-types:IPV4</enabled-address-families>
          </config>
          <inter-instance-policies>
            <apply-policy>
              <config>
                <import-policy>{{import_policy}}</import-policy>
              </config>
            </apply-policy>
          </inter-instance-policies>
        </network-instance>
      </network-instances>
    </config>
  </edit-config>
