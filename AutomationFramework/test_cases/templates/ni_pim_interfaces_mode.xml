 <edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
       <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{name}}</name>
          <config>
            <name>{{name}}</name>
          </config>
          <protocols>
            <protocol>
              <pim>
                <interfaces>
                  <interface>
                    <interface-id>{{interface_id}}</interface-id>
                    <config>
                      <interface-id>{{interface_id}}</interface-id>
                      <mode xmlns:oc-pim-types="http://openconfig.net/yang/pim/types">{{mode}}</mode>
                    </config>
                  </interface>
                </interfaces>
              </pim>
            </protocol>
          </protocols>
        </network-instance>
      </network-instances>
    </config>
  </edit-config>
