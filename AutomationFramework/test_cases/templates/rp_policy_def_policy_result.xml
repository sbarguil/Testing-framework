
  <edit-config>
    <target>
      <{{target}}/>
    </target>
 <default-operation>merge</default-operation>
    <error-option>rollback-on-error</error-option>
    <config>
      <routing-policy xmlns="http://openconfig.net/yang/routing-policy">
        <policy-definitions>
          <policy-definition>
            <name>{{name}}</name>
            <config>
              <name>{{name}}</name>
            </config>
            <statements>
              <statement>
                <name>{{statement_name}}</name>
                <config>
                  <name>{{statement_name}}</name>
                </config>
                <actions>
                  <config>
                    <policy-result>{{policy_result}}</policy-result>
                  </config>
                </actions>
              </statement>
            </statements>
          </policy-definition>
        </policy-definitions>
      </routing-policy>
    </config>
  </edit-config>
