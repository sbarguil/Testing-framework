<get>
  <filter>
    <components xmlns="http://openconfig.net/yang/platform">
      <component>
        <name>{{name}}</name>
        <properties>
          <property>
            <name>{{property_name}}</name>
            <state>
              <value>{{value}}</value>
            </state>
          </property>
        </properties>
      </component>
    </components>
  </filter>
</get>
