<edit-config>
    <target>
      <{{target}}/>
    </target>
      <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{name}}</name>
          <config>
            <name>{{name}}</name>
            <type xmlns:oc-ni-types="http://openconfig.net/yang/network-instance-types">{{type}}</type>
            <enabled>{{enable}}</enabled>
            <description>{{description}}</description>
          </config>    
          <mpls>
            <signaling-protocols>
              <ldp>
                <neighbors>
                  <neighbor>
                    <lsr-id>{{lsr_id}}</lsr-id>
                    <label-space-id>{{label_space_id}}</label-space-id>
                    <config>
                      <lsr-id>{{lsr_id}}</lsr-id>
                      <label-space-id>{{label_space_id}}</label-space-id>
                    </config>
                    <authentication>
                      <config>
                        <authentication-key>{{auth_key}}</authentication-key>
                      </config>
                    </authentication>
                  </neighbor>
              </ldp>
            </signaling-protocols>
          </mpls>
        </network-instance>
      </network-instances>
    </config>
</edit-config>
