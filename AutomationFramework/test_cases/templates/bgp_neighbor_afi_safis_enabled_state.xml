  <get>
    <filter>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{ni_name}}</name>
          <protocols>
            <protocol>
              <identifier>{{identifier}}</identifier>
              <name>{{name_protocol}}</name>
              <bgp>
                <global>
                  <config>
                    <as>{{as}}</as>
                  </config>
                </global>
                <neighbors>
                  <neighbor>
                    <neighbor-address>{{neighbor_address}}</neighbor-address>
                    <afi-safis>
                      <afi-safi>
                        <afi-safi-name>{{afi_safi_name}}<afi-safi-name>
                        <state>
                          <enabled>{{enabled}}</enabled>
                        </state>
                      </afi-safi>
                    </afi-safis>
                  </neighbor>
                </neighbors>
              </bgp>
            </protocol>
          </protocols>
        </network-instance>
      </network-instances>
      </filter>
    </get>
