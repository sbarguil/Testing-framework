<edit-config>
    <target>
      <{{target}}/>
    </target>
      <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{name}}</name>
          <config>
            <name>{{name}}</name>
            <type xmlns:oc-ni-types="http://openconfig.net/yang/network-instance-types">{{type}}</type>
            <enabled>{{enable}}</enabled>
            <description>{{description}}</description>
          </config>    
          <mpls>
            <signaling-protocols>
              <ldp>
                <global>
                  <config>
                    <lsr-id>{{ip_address}}</lsr-id>
                  </config>
                </global>
              </ldp>
            </signaling-protocols>
          </mpls>
        </network-instance>
      </network-instances>
    </config>
</edit-config>
