  <edit-config>
    <target>
      <{{target}}/>
    </target>
    <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{instance_name}}</name>
          <config>
            <name>{{instance_name}}</name>
          </config>
          <mpls>
            <signaling-protocols>
              <ldp>
                <targeted>
                  <address-families>
                    <address-family>
                      <afi-name>{{afi_name}}</afi-name>
                      <config>
                        <afi-name>{{afi_name}}</afi-name>
                      </config>
                      <targets>
                        <target>
                          <remote-address>{{remote_address}}</remote-address>
                          <config>
                            <remote-address>{{remote_address}}</remote-address>
                          </config>
                        </target>
                      </targets>
                    </address-family>
                  </address-families>
                </targeted>
              </ldp>
            </signaling-protocols>
          </mpls>
        </network-instance>
      </network-instances>
   </config>
  </edit-config>
