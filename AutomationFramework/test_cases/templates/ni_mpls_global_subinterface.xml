  <edit-config>
    <target>
      <{{target}}/>
    </target>
   <config>
      <network-instances xmlns="http://openconfig.net/yang/network-instance">
        <network-instance>
          <name>{{name}}</name>
          <mpls>
            <global>
              <interface-attributes>
                <interface>
                  <interface-id>1</interface-id>
                  <interface-ref>
                    <config>
                      <interface>{{interface_name}}</interface>
                      <subinterface>{{sub_name}}</subinterface>
                    </config>
                  </interface-ref>
                </interface>
              </interface-attributes>
            </global>
          </mpls>
        </network-instance>
      </network-instances>
    </config>
  </edit-config>
