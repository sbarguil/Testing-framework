  <get>
    <filter>
      <interfaces xmlns="http://openconfig.net/yang/interfaces">
        <interface>
          <name>{{interface_name}}</name>
          <subinterfaces>
            <subinterface>
              <index>{{index}}</index>
              <ipv4 xmlns="http://openconfig.net/yang/interfaces/ip">
                <addresses>
                  <address>
                    <state>
                      <ip>{{ip}}</ip>
                    </state>
                  </address>
                </addresses>
              </ipv4>
            </subinterface>
          </subinterfaces>
        </interface>
      </interfaces>
    </filter>
  </get>
